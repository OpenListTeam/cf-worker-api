{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "verbatimModuleSyntax": true,
    "lib": ["ESNext"],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@drivers/*": ["src/drivers/*"]
    }
  },
  "include": ["worker-configuration.d.ts", "manifest.d.ts", "src/**/*.ts"]
}
